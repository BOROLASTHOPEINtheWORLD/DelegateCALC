<Application x:Class="DelegateCALC.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DelegateCALC"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Базовый стиль для кнопок -->
        <Style x:Key="CalcButtonBase" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для цифровых кнопок -->
        <Style x:Key="CalcButtonNumber" BasedOn="{StaticResource CalcButtonBase}" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4A4A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для операций -->
        <Style x:Key="CalcButtonOperation" BasedOn="{StaticResource CalcButtonBase}" TargetType="Button">
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFAA33"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E58400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для специальных кнопок -->
        <Style x:Key="CalcButtonSpecial" BasedOn="{StaticResource CalcButtonBase}" TargetType="Button">
            <Setter Property="Background" Value="#505050"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#606060"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки равно -->
        <Style x:Key="CalcButtonEquals" BasedOn="{StaticResource CalcButtonOperation}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFAA33"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E58400"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
