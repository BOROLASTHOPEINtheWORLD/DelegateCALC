<UserControl x:Class="DelegateCALC.Views.Calculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">

    <Grid Background="#2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display Area -->
        <Border Grid.Row="0" Background="#1E1E1E" Margin="10" CornerRadius="5">
            <TextBox Text="{Binding DisplayText}" 
                   BorderThickness="0" 
                   Background="Transparent" 
                   Foreground="White"
                   FontSize="32"
                   FontWeight="Bold"
                   TextAlignment="Right"
                   VerticalContentAlignment="Center"
                   Padding="20,15"
                   IsReadOnly="True"
                   CaretBrush="White"/>
        </Border>

        <!-- Buttons Grid -->
        <UniformGrid Grid.Row="1" Rows="5" Columns="4" Margin="10">
            <!-- Row 1 -->
            <Button Content="C" Style="{StaticResource CalcButtonSpecial}" Command="{Binding ClearCommand}"/>
            <Button Content="⌫" Style="{StaticResource CalcButtonSpecial}" Command="{Binding BackspaceCommand}"/>
            <Button Content="%" Style="{StaticResource CalcButtonSpecial}" Command="{Binding OperationCommand}" CommandParameter="%"/>
            <Button Content="÷" Style="{StaticResource CalcButtonOperation}" Command="{Binding OperationCommand}" CommandParameter="/"/>

            <!-- Row 2 -->
            <Button Content="7" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="7"/>
            <Button Content="8" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="8"/>
            <Button Content="9" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="9"/>
            <Button Content="×" Style="{StaticResource CalcButtonOperation}" Command="{Binding OperationCommand}" CommandParameter="*"/>

            <!-- Row 3 -->
            <Button Content="4" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="4"/>
            <Button Content="5" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="5"/>
            <Button Content="6" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="6"/>
            <Button Content="-" Style="{StaticResource CalcButtonOperation}" Command="{Binding OperationCommand}" CommandParameter="-"/>

            <!-- Row 4 -->
            <Button Content="1" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="1"/>
            <Button Content="2" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="2"/>
            <Button Content="3" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="3"/>
            <Button Content="+" Style="{StaticResource CalcButtonOperation}" Command="{Binding OperationCommand}" CommandParameter="+"/>

            <!-- Row 5 -->
            <Button Content="±" Style="{StaticResource CalcButtonSpecial}" Command="{Binding NegateCommand}"/>
            <Button Content="0" Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="0"/>
            <Button Content="," Style="{StaticResource CalcButtonNumber}" Command="{Binding NumberCommand}" CommandParameter="."/>
            <Button Content="=" Style="{StaticResource CalcButtonEquals}" Command="{Binding EqualsCommand}"/>
        </UniformGrid>
    </Grid>
</UserControl>